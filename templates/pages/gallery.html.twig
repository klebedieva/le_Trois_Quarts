{% extends 'base.html.twig' %}

{% block title %}Galerie - Le Trois Quarts{% endblock %}

{% block stylesheets %}
    <meta name="description" content="Découvrez l'ambiance du Trois Quarts en images. Photos de notre terrasse, plats et intérieur.">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}?v={{ 'now'|date('YmdHis') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/gallery.css') }}?v={{ 'now'|date('YmdHis') }}">
{% endblock %}

{% block body %}
    <!-- Gallery Header -->
    <section class="gallery-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center text-white">
                    <h1 class="display-4 mb-4">Galerie Photos</h1>
                    <p class="lead">Découvrez l'ambiance chaleureuse du Trois Quarts</p>
                    <div class="gallery-header-divider"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Gallery Filters -->
    <section class="gallery-filters py-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="filter-buttons text-center">
                        <button class="filter-btn active" data-filter="all">Tout</button>
                        <button class="filter-btn" data-filter="terrasse">Terrasse</button>
                        <button class="filter-btn" data-filter="interieur">Intérieur</button>
                        <button class="filter-btn" data-filter="plats">Plats</button>
                        <button class="filter-btn" data-filter="ambiance">Ambiance</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Gallery Grid -->
    <section class="gallery-grid py-5">
        <div class="container">
            <div class="row g-3" id="galleryContainer">
                {# Examples (same set as Restaurant). Replace with real images if needed #}
                <div class="col-lg-4 col-md-6 gallery-item" data-category="terrasse">
                    <div class="gallery-card" data-image="https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=800" data-title="Terrasse ensoleillée" data-description="Notre belle terrasse pour profiter du soleil marseillais">
                        <img src="https://images.pexels.com/photos/1581384/pexels-photo-1581384.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Terrasse ensoleillée" class="img-fluid">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Terrasse ensoleillée</h5>
                                <p>Notre belle terrasse pour profiter du soleil</p>
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 gallery-item" data-category="interieur">
                    <div class="gallery-card" data-image="https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?auto=compress&cs=tinysrgb&w=800" data-title="Salle principale" data-description="L'intérieur chaleureux de notre brasserie">
                        <img src="https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Salle principale" class="img-fluid">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Salle principale</h5>
                                <p>L'intérieur chaleureux de notre brasserie</p>
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 gallery-item" data-category="plats">
                    <div class="gallery-card" data-image="https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg?auto=compress&cs=tinysrgb&w=800" data-title="Bouillabaisse marseillaise" data-description="Notre spécialité : la bouillabaisse traditionnelle">
                        <img src="https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Bouillabaisse marseillaise" class="img-fluid">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Bouillabaisse marseillaise</h5>
                                <p>Notre spécialité traditionnelle</p>
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 gallery-item" data-category="plats">
                    <div class="gallery-card" data-image="https://images.pexels.com/photos/1639562/pexels-photo-1639562.jpeg?auto=compress&cs=tinysrgb&w=800" data-title="Salade fraîche" data-description="Nos salades composées avec des produits frais">
                        <img src="https://images.pexels.com/photos/1639562/pexels-photo-1639562.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Salade fraîche" class="img-fluid">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Salade fraîche</h5>
                                <p>Produits frais et de saison</p>
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 gallery-item" data-category="plats">
                    <div class="gallery-card" data-image="https://images.pexels.com/photos/1126728/pexels-photo-1126728.jpeg?auto=compress&cs=tinysrgb&w=800" data-title="Desserts maison" data-description="Nos desserts préparés avec amour">
                        <img src="https://images.pexels.com/photos/1126728/pexels-photo-1126728.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Desserts maison" class="img-fluid">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Desserts maison</h5>
                                <p>Préparés avec amour par notre chef</p>
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 gallery-item" data-category="ambiance">
                    <div class="gallery-card" data-image="https://images.pexels.com/photos/1307698/pexels-photo-1307698.jpeg?auto=compress&cs=tinysrgb&w=800" data-title="Bar et boissons" data-description="Notre sélection de vins et cocktails">
                        <img src="https://images.pexels.com/photos/1307698/pexels-photo-1307698.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Bar et boissons" class="img-fluid">
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h5>Bar et boissons</h5>
                                <p>Sélection de vins et cocktails</p>
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <button class="btn btn-primary" id="loadMoreBtn">
                    <i class="bi bi-plus-circle me-2"></i>Voir plus de photos
                </button>
            </div>
        </div>
    </section>

    <!-- Gallery Modal -->
    <div class="modal fade" id="galleryModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="modalTitle"></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="gallery-modal-content">
                        <img id="modalImage" src="" alt="" class="img-fluid w-100">
                        <div class="modal-navigation">
                            <button class="nav-btn prev-btn" id="prevBtn">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <button class="nav-btn next-btn" id="nextBtn">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                        <div class="modal-info">
                            <h4 id="modalImageTitle"></h4>
                            <p id="modalImageDescription"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="{{ asset('assets/js/gallery.js') }}"></script>
{% endblock %}


