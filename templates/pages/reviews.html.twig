{% extends 'base.html.twig' %}

{% block title %}Avis Clients - Le Trois Quarts{% endblock %}

{% block stylesheets %}
    <meta name="description" content="Découvrez les avis de nos clients sur Le Trois Quarts, brasserie conviviale à Marseille. Partagez votre expérience avec nous.">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block body %}
    <!-- Success Message -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show position-fixed" 
             style="top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px; text-align: center;" 
             id="successMessage">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    
    <!-- Page Header -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="text-center">
                <h1 class="display-4 mb-3">Avis de nos clients</h1>
                <p class="lead">Ce que pensent nos clients de leur expérience au Trois Quarts</p>
            </div>
        </div>
    </section>

    <!-- Reviews Section -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- Add Review Form -->
                    <div class="card mb-5">
                        <div class="card-header">
                            <h3 class="mb-0">
                                <i class="bi bi-chat-dots me-2"></i>Ajouter votre avis
                            </h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(reviewForm, {'attr': {'class': 'contact-form'}}) }}
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(reviewForm.name, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(reviewForm.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(reviewForm.name) }}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(reviewForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(reviewForm.email, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(reviewForm.email) }}
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    {{ form_label(reviewForm.rating, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(reviewForm.rating, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(reviewForm.rating) }}
                                </div>
                                
                                <div class="mb-3">
                                    {{ form_label(reviewForm.comment, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(reviewForm.comment, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                    {{ form_errors(reviewForm.comment) }}
                                </div>
                                
                                <div class="text-center">
                                    {{ form_widget(reviewForm.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                                </div>
                            {{ form_end(reviewForm) }}
                        </div>
                    </div>

                    <!-- Existing Reviews -->
                    <div class="row">
                        {% if reviews is empty %}
                            <div class="col-12 text-center">
                                <div class="py-5">
                                    <i class="bi bi-chat-dots icon-large"></i>
                                    <h4 class="mt-3">Aucun avis trouvé</h4>
                                    <p class="text-muted">Aucun avis disponible pour le moment.</p>
                                </div>
                            </div>
                        {% else %}
                            {% for review in reviews %}
                                <div class="col-lg-6 mb-4">
                                    <div class="review-card p-4">
                                        <div class="review-stars mb-3">
                                            {% for i in 1..5 %}
                                                {% if i <= review.rating %}
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                {% else %}
                                                    <i class="bi bi-star text-warning"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <p class="review-text mb-3">"{{ review.comment }}"</p>
                                        <div class="review-author">
                                            <strong>{{ review.name }}</strong>
                                            <small class="text-muted">{{ review.createdAt|date('d/m/Y') }}</small>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
