{% extends 'base.html.twig' %}

{% block title %}Avis Clients - Le Trois Quarts{% endblock %}

{% block stylesheets %}
    <meta name="description" content="Découvrez les avis de nos clients sur Le Trois Quarts, brasserie conviviale à Marseille. Partagez votre expérience avec nous.">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}?v={{ 'now'|date('YmdHis') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/reviews.css') }}?v={{ 'now'|date('YmdHis') }}">
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show alert-fixed-center" id="successMessage">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    
    <!-- Reviews Header Section -->
    <section class="reviews-header py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Tous les avis</li>
                        </ol>
                    </nav>
                    <h1 class="mb-4">Avis de nos clients</h1>
                    <p class="lead mb-4">Découvrez ce que pensent nos clients de leur expérience au Trois Quarts</p>
                    <div class="reviews-header-divider"></div>
                    <div class="text-center mt-3">
                        <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#addReviewModal">
                            <i class="bi bi-chat-dots me-2"></i>Ajouter votre avis
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Reviews Introduction Section -->
    <section class="reviews-intro py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="reviews-intro-title mb-3">Témoignages de nos clients</h2>
                    <div class="reviews-intro-divider mb-4"></div>
                    <p class="reviews-intro-text mb-4">
                        Découvrez les expériences authentiques de nos clients qui ont partagé leurs moments au Trois Quarts. Chaque avis reflète l'ambiance chaleureuse et la qualité de notre cuisine.
                    </p>
                                    </div>
                                    </div>
                                </div>
    </section>

    <!-- Reviews List Section -->
    <section class="reviews-list py-3 pb-5">
        <div class="container">
            <div class="row mb-1" id="reviewsContainer">
                        {% if reviews is empty %}
                            <div class="col-12 text-center">
                                <div class="py-5">
                                    <i class="bi bi-chat-dots icon-large"></i>
                                    <h4 class="mt-3">Aucun avis trouvé</h4>
                                    <p class="text-muted">Aucun avis disponible pour le moment.</p>
                                </div>
                            </div>
                        {% else %}
                            {% for review in reviews %}
                        <div class="col-lg-6 col-md-6 mb-4">
                            <div class="review-item" data-rating="{{ review.rating }}">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <div class="reviewer-avatar">{{ review.name|first|upper }}</div>
                                        <div class="reviewer-details">
                                            <h5>{{ review.name }}</h5>
                                            <small>{{ review.createdAt|date('d/m/Y') }}</small>
                                        </div>
                                    </div>
                                    <div class="review-rating">
                                        <span class="rating-number">{{ review.rating }}/5</span>
                                    </div>
                                </div>
                                <div class="review-stars">
                                            {% for i in 1..5 %}
                                                {% if i <= review.rating %}
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                {% else %}
                                                    <i class="bi bi-star text-warning"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                <p class="review-text">"{{ review.comment }}"</p>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
            </div>
            <div class="text-center mb-3">
                <button class="btn btn-soft-secondary btn-lg" id="loadMoreReviews">
                    <i class="bi bi-arrow-down me-2"></i>Charger plus d'avis
                </button>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h3 class="mb-4">Envie de découvrir notre cuisine ?</h3>
                    <p class="lead mb-4">Après avoir lu les avis de nos clients, venez goûter nos délicieux plats !</p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
                        <a href="{{ path('app_menu') }}" class="btn btn-custom-menu btn-lg">
                            <i class="bi bi-utensils me-2"></i>Découvrir notre menu
                        </a>
                        <a href="{{ path('app_reservation') }}" class="btn btn-custom-secondary btn-lg">
                            <i class="bi bi-calendar-check me-2"></i>Réserver une table
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Add Review Modal: EXACTLY like on homepage -->
    <div class="modal fade" id="addReviewModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-chat-dots me-2"></i>Ajouter votre avis
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="reviewForm" novalidate>
                        <div class="mb-3">
                            <label for="reviewerName" class="form-label">Votre nom *</label>
                            <input type="text" class="form-control" id="reviewerName" name="name" required>
                            <div class="invalid-feedback" id="reviewerNameError"></div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Note *</label>
                            <div class="rating-stars">
                                <i class="bi bi-star star-rating" data-rating="1"></i>
                                <i class="bi bi-star star-rating" data-rating="2"></i>
                                <i class="bi bi-star star-rating" data-rating="3"></i>
                                <i class="bi bi-star star-rating" data-rating="4"></i>
                                <i class="bi bi-star star-rating" data-rating="5"></i>
                            </div>
                            <input type="hidden" id="ratingValue" name="rating" value="0">
                            <small class="text-muted">Cliquez sur les étoiles pour noter</small>
                            <div class="invalid-feedback" id="ratingError"></div>
                        </div>
                        <div class="mb-3">
                            <label for="reviewText" class="form-label">Votre avis *</label>
                            <textarea class="form-control" id="reviewText" name="comment" rows="4" placeholder="Partagez votre expérience au Trois Quarts..." required></textarea>
                            <div class="invalid-feedback" id="reviewTextError"></div>
                        </div>
                        <div class="mb-3">
                            <label for="reviewEmail" class="form-label">Email (optionnel)</label>
                            <input type="email" class="form-control" id="reviewEmail" name="email" placeholder="votre@email.com">
                            <div class="invalid-feedback" id="reviewEmailError"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="submitReview">
                        <i class="bi bi-send me-2"></i>Envoyer l'avis
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.REVIEWS_ENDPOINT = '/api/review';
        window.REVIEWS_LIST_ENDPOINT = '/api/reviews';
    </script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="{{ asset('assets/js/reviews.js') }}"></script>
{% endblock %}
